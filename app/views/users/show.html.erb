<ul>
  <li>
    <%= link_to user_path(@user) do %>
      <div class="text">投稿数</div>
      <div class="num"><%= @user.movies.count %></div>
    <% end %>
  </li>
</ul>

<% @user.movies.each do |movie| %>
  <h4 class="user">
    <span class="user-name">
      <%= link_to movie.user.email, user_path(movie.user) %>
    </span>
  <span class="user-id"><%= movie.user.email %></span>
  </h4>
  <div class="movie-body">
    <%= image_tag movie.image %><br>
    <%= movie.title %><br>
    <%= movie.director %><br>
    <%= movie.category_id %><br>
    <%= movie.when %><br>
    <%= movie.time %><br>
    <%= movie.information %>
  </div>

<% end %>
