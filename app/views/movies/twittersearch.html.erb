<body class = "body_twitter">
  <div class = "wrap_twitter">

    <h1 class = "twitter-tittle">★ 好きな映画のつぶやきを検索しちゃえ〜！</h1>
    <div class='content'>
      <div id="search-box">
        <%= form_tag('/movies/search', method: :get) do %>
          <%= text_field_tag :tweet, nil,  id: "tweet_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 400px;" "height: 20px;"%><button title="検索" type="submit">検索</button>
        <% end %>
      </div>

      <div id='twitter_search_list'>
         <% if @result_tweets.present? %>
          <div class = "twitter_serach_list_jquery" style="display: none"><h2 class = "twitter_search_list_text">検索結果</h2>
        <% @result_tweets.take(50).each_with_index do |tw| %>
         <p class = "twitter_search_list_text2"><%= "●: #{tw.full_text}" %></p>
        <% end %>
      </div>
        <% end %>
      </div>
    </div>

  </div>
</body>


<script>
var flip = 0;
$("button").click(function () {
$("#search-box").toggle(500)( flip++ % 2 == 0 );
});
</script>
<script>
var flip = 0;
$(document).ready( function(){
$(".twitter_serach_list_jquery").toggle(1500)( flip++ % 2 == 0 );
});
</script>