<body class = "body_post">
  <div class = "wrap">

    <%= link_to "ページ最下部へ移動", "#comment_submit", { :id => "comment_submit1"} %>

    <h1 class = "h1_post" ><%= @post.title %></h1>
<br>

<div class = "clearfix">
  <%= render :partial => 'talk_room' %>
</div>

<br>

<% if user_signed_in? %>
  <%= form_for( [@post, @comment] ) do |comment| %>
    <%= comment.text_area :talk, class: "..." %>
    <div id = "comment_submit"><%= comment.submit "投稿" %></div>
  <% end %>
<% end %>

<br>

<%= link_to "編集", edit_post_path(@post.id), class: "..." %>
<%= link_to "削除", post_path(@post.id), method: :delete, class: "...", "data-confirm" => "本当に削除しますか？" %>

<%= link_to "一覧", posts_path, class: "..." %>

  </div>
</body>

