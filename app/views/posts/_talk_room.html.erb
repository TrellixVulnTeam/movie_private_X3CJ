  <% if user_signed_in? %>
    <% @post.comments.each do |comment| %>
      <p class = "kaiwa-text, clearfix">
      <% if comment.user.id == current_user.id %>
        <div class = "kaiwa-text-left" >
      <% else %>
        <div class = "kaiwa-text-right" >
      <% end %>
        <p class = "kaiwa_text1"><%= comment.talk %></p>
        </div>
      </p>
    <% end %>
  <% else %>
    <% @post.comments.each do |comment| %>
      <p class = "kaiwa-text, clearfix">
        <div class = "kaiwa-text-not-user">
          <p class = "kaiwa_text2"><%= comment.talk %></p>
        </div>
      </p>
    <% end %>
  <% end %>
