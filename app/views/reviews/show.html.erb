<body class = "body_user_show">
  <div class = "wrap_user_show">

  <div class="user_movie_body">
    <%= image_tag @movie.image %>
    <%= @movie.title %><br>
    <%= @movie.director %><br>
    <%= @movie.category_id %><br>
    <%= @movie.when %><br>
    <%= @movie.time %><br>
    <%= @movie.information %><br>
  </div>




  <div class="star_review">
    <% @movie.reviews.each do |re| %>
      ニックネーム
      <%= re.nickname %>
      <div class="star-rating" data-score=<%= re.rating %>></div>
      レビュー
      <%= re.review %>
    <% end %>
  </div>

  <script>
$('.star-rating').raty({
  number: 10,
  path: '/assets/',
  readOnly: true,
  score: function () {
    return $(this).attr('data-score');
  }
});
  </script>
</body>

<%= link_to "戻る", user_path(@movie.user_id) %>
<%= link_to "編集", edit_review_path(@review.id), class: "..." %>
<%= link_to "削除", review_path(@review.id), method: :delete, class: "...", "data-confirm" => "本当に削除しますか？" %>
